---
import type { Service } from '../../types/types';

import {Image} from "astro:assets"
interface Props {
    service: Service;
}

const { service } = Astro.props;
---

<div class="flex flex-col items-center p-6 bg-white rounded-lg">
    <div class="w-full h-48 mb-4 overflow-hidden rounded-lg">
        <Image 
        src={service.imagePath} 
        alt={service.title}
        width={400}
        height={400}
        class="w-32 md:w-48 h-32 md:h-48"
        />
    </div>
    <h3 class="text-center text-lg font-medium text-gray-900">
        {service.title}
    </h3>
</div>