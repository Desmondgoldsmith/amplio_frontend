---
import { Image } from 'astro:assets';
import type { Service } from '../../types/types';

interface Props {
    service: Service;
}

const { service } = Astro.props;
const imageSource = service.imagePath;
---

<div class="flex flex-col items-center p-4 md:p-6 bg-white rounded-lg transition-transform hover:scale-[1.02]">
    <div class="w-full aspect-video mb-3 md:mb-4 overflow-hidden rounded-lg">
        <Image 
            src={imageSource}
            alt={service.title}
            width={400}
            height={300}
            class="w-full h-full object-cover"
            loading="lazy"
        />
    </div>
    <h3 class="text-center text-base md:text-lg font-medium text-gray-900 line-clamp-2">
        {service.title}
    </h3>
</div>