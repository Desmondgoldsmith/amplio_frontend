---
import { Image } from 'astro:assets';
import type { ImageMetadata } from 'astro';

interface Props {
  name: string;
  role: string;
  image: ImageMetadata;
  bio: string;
}

const { name, role, image, bio } = Astro.props;
---

<div class="bg-white rounded-lg shadow-sm p-6 pb-4">
  <div class="flex flex-col sm:flex-row items-center sm:items-start pb-4 sm:space-y-0 sm:space-x-6">
    <Image
      src={image}
      alt={name}
      width={176}  
      height={176}
      class="rounded-full object-cover w-28 h-28 sm:w-[176px] sm:h-[176px]"
    />
    <div class="text-center sm:text-left space-y-2 w-full">
      <h3 class="text-[#FF5733] text-xl sm:text-2xl font-semibold">{name}</h3>
      <p class="text-gray-700 font-medium">{role}</p>
      <div class="pt-4 sm:pt-10">
        <p class="text-gray-600 leading-relaxed text-sm sm:text-base">{bio}</p>
      </div>
    </div>
  </div>
</div>
