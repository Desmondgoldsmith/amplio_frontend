---
import { Image } from 'astro:assets';
import type { ImageMetadata } from 'astro';


interface Props {
  name: string;
  role: string;
  image: ImageMetadata;
  bio: string;
}

const { name, role, image, bio } = Astro.props;
---

<div class="bg-white rounded-lg shadow-sm p-6 space-y-4">
  <div class="flex items-start space-x-6">
    <Image
      src={image}
      alt={name}
      width={176}  
      height={176}
      class="rounded-full object-cover"
    />
    <div class="space-y-2">
      <h3 class="text-[#FF5733] text-2xl font-semibold">{name}</h3>
      <p class="text-gray-700 font-medium">{role}</p>
      <div class = "pt-10">
        <p class="text-gray-600 leading-relaxed">{bio}</p>
      </div>
    </div>
  </div>
  
</div>