---
import { Image } from 'astro:assets';
import { statistics } from '../../constants';
import type { ImageMetadata } from "astro";
import TalkingBooksBlog from './TalkingBooksBlog.astro';

import UsaidLogo from "../../assets/why-amplio/usaid.jpg"
import WhyAmplio from "../../assets/why-amplio/why-amplio.jpg"
import WomanWithAmplio from "../../assets/why-amplio/woman-with-amplio.jpg"
import WomanClapping from "../../assets/why-amplio/women-clapping.jpg"
import WomanAmplio from "../../assets/why-amplio/woman-amplio.jpg"
import GirlAmplio from "../../assets/why-amplio/girl-amplio.jpg"



interface BenefitList {
  title: string;
  benefits: string[];
}

interface TestimonialProps {
  quote: string;
  logoSrc: ImageMetadata
}

const communityBenefits: BenefitList = {
  title: "For communities:",
  benefits: [
    "Offers more equitable access to information",
    "Promotes group listening and engagement, social discussion, and message retention",
    "Allows listeners to learn at their own pace",
    "Builds trust and community agency",
    "Devices can be rotated among households or shared and played in group settings",
    "There's no cost to the end user"
  ]
};

const implementerBenefits: BenefitList = {
  title: "For implementers:",
  benefits: [
    "Amplifies message reach in rural remote areas",
    "Ensures delivery of consistent and accurate messages",
    "Supports training and capacity building",
    "Elevates community voices through user feedback",
    "Collects usage data for monitoring and evaluation",
    "Delivers content in a community's local language",
    "Devices can be reprogrammed and deployed again"
  ]
};

const testimonial = {
  quote: "The best technologies meet women where they are, and the Amplio Talking Book is at the top of my list. It addresses all the constraints that women face, be it literacy, cost, safety, security, or relevance.",
  logoSrc: UsaidLogo
};

const BANNER_WIDTH = 1920;
const BANNER_HEIGHT = 1080;
---

<section>
  <section class="bg-white">
    <div class="text-center mb-8 md:mb-16 px-4">
      <h2 class="text-3xl md:text-4xl font-bold mb-4 mt-5">Why Talking Books?</h2>
      <p class="max-w-2xl mx-auto text-base md:text-lg mb-6 md:mb-9">
        For people in developing countries, access to knowledge can transform lives.
      </p>
    </div>

    <div class="relative w-full lg:h-[560px] h-[230px]  mt-8 md:mt-12 overflow-hidden">
      <div class="relative w-full h-full">
            <div class="absolute inset-0">
              <Image
              src={WhyAmplio}
              alt="Person holding a Talking Book device"
              width={BANNER_WIDTH}
              height={BANNER_HEIGHT}
              class="w-full aspect-[21/12] md:aspect-auto"
             />
            </div>

</section>

    <section class="max-w-6xl mx-auto px-4 py-8 md:py-12">
        <div class="text-center mb-8 md:mb-12">
          <h2 class="text-xl md:text-2xl font-bold mb-4 md:mb-6 max-w-3xl mx-auto">
            Development agencies face barriers to sharing knowledge with the most vulnerable and underserved communities.
          </h2>
          <p class="text-gray-700 text-base md:text-lg mb-4 max-w-3xl mx-auto">
            They also lack an adequate understanding of each community's specific needs. There are too many villages, too far apart — and too many barriers. Challenges include poor road conditions, illiteracy, gender inequities, unreliable electricity and internet, and expensive mobile data.
          </p>
          <p class="text-gray-700 text-base md:text-lg max-w-3xl mx-auto">
            But access to knowledge can impact food security, health, income, and more.
          </p>
        </div>
      
        <div class="grid grid-cols-2 md:grid-cols-2 lg:grid-cols-4 gap-4 md:gap-8 px-4 md:px-40">
          {statistics.map((stat) => (
            <div class="flex flex-col items-center text-center p-2 md:p-4">
              <div class="mb-2 md:mb-4">
                <Image 
                  src={stat.imageSrc}
                  alt=""
                  class="w-12 h-12 md:w-16 md:h-16 object-contain"
                />
              </div>
              <div class="text-xl md:text-2xl font-bold mb-1 md:mb-2">{stat.value}</div>
              <p class="text-gray-600 text-xs md:text-sm">{stat.description}</p>
            </div>
          ))}
        </div>
    </section>

    <section>
        <div class="mt-8 md:mt-12 relative w-full md:w-screen md:left-1/2 md:right-1/2 md:ml-[-50vw] md:mr-[-50vw]">
            <div class="w-full h-[300px] md:h-[560px] relative">
              <Image 
                src={WomanWithAmplio}
                alt="Girl listening to the Amplio Device with Family"
                class="w-full h-full object-cover"
              />
            </div>
        </div>
    </section>

    <section class="bg-blue-50 py-8 md:py-16">
        <div class="container mx-auto px-4 text-center">
          <h2 class="text-2xl md:text-3xl font-bold mb-4">An inclusive digital solution</h2>
          <p class="text-gray-600 max-w-2xl text-base md:text-lg mx-auto mb-6 md:mb-8">
            Amplio's Talking Book program is recognized by UNESCO as an inclusive digital solution that low-literate adults and youth can use to gain new skills and knowledge to improve their lives. Our technology overcomes barriers in hard-to-reach communities — so knowledge sharing goes both ways.
          </p>
          
          <div class="max-w-3xl mx-auto px-4 md:px-0">
            <div class="aspect-video bg-gray-200 rounded-lg overflow-hidden">
              <iframe 
                src="https://www.youtube.com/embed/q7GN3q7katA?si=8-3t0KvD68ZypauC" 
                title="Project Video" 
                class="w-full h-full"
                frameborder="0" 
                allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" 
                allowfullscreen
              ></iframe>
            </div>
          </div>
        </div>
    </section>

    <section class="max-w-7xl mx-auto px-4 md:px-52 py-8 md:py-16">
        <h2 class="text-3xl md:text-4xl font-bold text-center mb-8 md:mb-16">Why Amplio Talking Books?</h2>
      
        <div class="flex flex-col md:flex-row gap-6 md:gap-8 mb-8 md:mb-16">
          <div class="w-full md:w-1/2">
            <h3 class="text-xl md:text-2xl text-[#4052AB] font-medium mb-4 md:mb-6">{communityBenefits.title}</h3>
            <ul class="space-y-3 md:space-y-4">
              {communityBenefits.benefits.map(benefit => (
                <li class="flex gap-2">
                  <span class="text-black">•</span>
                  <span class="text-sm md:text-base">{benefit}</span>
                </li>
              ))}
            </ul>
          </div>
          <div class="w-full md:w-1/2">
            <Image 
              src={WomanClapping}
              alt="People engaging with Talking Books"
              class="w-full h-full object-cover"
            />
          </div>
        </div>
      
        <div class="flex flex-col-reverse md:flex-row gap-6 md:gap-8 mb-8 md:mb-10">
          <div class="w-full md:w-1/2">
            <Image 
              src={WomanAmplio}
              alt="Implementer demonstrating Talking Book usage"
              class="w-full h-full object-cover"
            />
          </div>
          <div class="w-full md:w-1/2">
            <h3 class="text-xl md:text-2xl text-[#4052AB] font-medium mb-4 md:mb-6">{implementerBenefits.title}</h3>
            <ul class="space-y-3 md:space-y-4">
              {implementerBenefits.benefits.map(benefit => (
                <li class="flex gap-2">
                  <span class="text-black">•</span>
                  <span class="text-sm md:text-base">{benefit}</span>
                </li>
              ))}
            </ul>
          </div>
        </div>
      
        <div class="border-t pt-8 md:pt-12">
          <div class="max-w-4xl space-y-6 md:space-y-10 mx-auto text-center px-4">
            <Image 
              src={testimonial.logoSrc}
              alt="USAID logo"
              class="h-16 md:h-20 mx-auto"
            />
            <blockquote class="text-lg md:text-xl text-gray-700 italic max-w-3xl mx-auto mb-6 md:mb-8">
              "{testimonial.quote}"
            </blockquote>
            <p class="text-xs md:text-sm text-gray-500 text-center">Revi Sterling, Director, USAID WomenConnect Challenge</p>
          </div>
        </div>
    </section>

    <!-- talking books blog -->
    <TalkingBooksBlog/>

    <section class="relative w-full">
      <div class="relative">
          <Image
              src={GirlAmplio}
              alt="Person holding a Talking Book device"
              width={BANNER_WIDTH}
              height={BANNER_HEIGHT}
              class="w-full aspect-[21/12] md:aspect-auto"
          />
          
          <div class="absolute inset-0 bg-black/30 hidden md:block"></div>
          
          <div class="absolute inset-0">
              <!-- Mobile Content -->
              <div class="md:hidden flex h-full">
                  <div class="px-6 py-8 self-center">
                      <h2 class="text-2xl font-semibold mb-3 text-white text-shadow">
                          Knowledge Is Power
                      </h2>
                      <p class="text-lg mb-4 text-white text-shadow">
                          Help share knowledge and transform lives for vulnerable communities.
                      </p>
                      <div>
                          <a 
                              href="https://amplioghanasbccfund.donorsupport.co/page/generalgiving" 
                              class="inline-block px-6 py-3 bg-[#00BCD4] text-white font-semibold rounded-md hover:bg-[#00ACC1] transition-colors text-sm"
                              target = "_blank"
                              >
                              DONATE NOW
                          </a>
                      </div>
                  </div>
              </div>

              <!-- Desktop Content -->
              <div class="hidden md:flex h-full items-center justify-start">
                  <div class="max-w-lg px-8 py-10 ml-32 bg-[#425092]/80 rounded-lg backdrop-blur-sm text-white">
                      <h2 class="text-3xl font-semibold mb-4 text-center">
                          Knowledge Is Power
                      </h2>
                      <p class="text-xl mb-6 text-center">
                          Help share knowledge and transform lives for vulnerable communities.
                      </p>
                      <div class="text-center">
                          <a 
                              href="https://amplioghanasbccfund.donorsupport.co/page/generalgiving" 
                              class="inline-block px-8 py-3 bg-[#00BCD4] text-white font-semibold rounded-md hover:bg-[#00ACC1] transition-colors text-base"
                              target = "_blank"
                          >
                              DONATE NOW
                          </a>
                      </div>
                  </div>
              </div>
          </div>
      </div>
  </section>
</section>