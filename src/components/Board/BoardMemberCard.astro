---
interface Props {
  name: string;
  image: string;
  bio: string;
}

const { name, image, bio } = Astro.props;
---

<div class="bg-white rounded-lg shadow-sm p-6 space-y-4">
  <div class="flex flex-col sm:flex-row items-center sm:items-start space-y-4 sm:space-y-0 sm:space-x-6">
    <img
      src={image}
      alt={name}
      class="w-28 h-28 sm:w-44 sm:h-44 rounded-full object-cover"
    />
    <div class="text-center sm:text-left space-y-2 w-full">
      <h3 class="text-[#FF5733] text-xl sm:text-2xl font-semibold">{name}</h3>
      <div class="pt-4 sm:pt-10">
        <p class="text-gray-600 leading-relaxed text-sm sm:text-base">{bio}</p>
      </div>
    </div>
  </div>
</div>
