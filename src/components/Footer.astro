---
interface FooterLink {
  text: string;
  href: string;
}

interface FooterSection {
  title: string;
  links: FooterLink[];
}

const footerSections: FooterSection[] = [
  {
    title: "ABOUT US",
    links: [
      { text: "Our Story", href: "/our-story" },
      { text: "Why Talking Books", href: "/why-talking-books" },
      { text: "Our Technology", href: "/technology" },
      { text: "Basic Package", href: "/basic-package" },
      { text: "Amplio Ghana", href: "/amplio-ghana" },
      { text: "Careers", href: "/careers" }
    ]
  },
  {
    title: "LEARN MORE",
    links: [
      { text: "Amplio Blog", href: "/blog" },
      { text: "Videos", href: "/videos" },
      { text: "Case Studies", href: "/case-studies" },
      { text: "Impact Map", href: "/impact-map" },
      { text: "Ways to Listen", href: "/ways-to-listen" }
    ]
  }
];

const currentYear = new Date().getFullYear();
---

<footer class="bg-[#3B3E79] text-white py-16">
  <div class="max-w-[2000px] mx-auto px-44">
    <div class="grid grid-cols-10 gap-8">
      {/* Left Column - Description and Newsletter */}
      <div class="col-span-5">
        <p class="text-sm leading-relaxed mb-12">
          Amplio Ghana is a Ghana-based non-governmental organisation, Reg No. CG059762020. Amplio's innovative technology and Social and Behavior Change (SBC) expertise amplifies program reach and impact in rural communities globally. Maker of the Amplio Talking Book.
        </p>
        
        <div class="mb-8">
          <h3 class="font-bold mb-4">JOIN OUR NEWSLETTER</h3>
          <div class="flex items-start">
            <div class="flex-1">
              <input
                type="email"
                placeholder="e.g., email@example.com"
                class="w-full px-4 py-2 bg-white text-gray-800 rounded-l focus:outline-none"
              />
            </div>
            <button class="bg-[#FF5C35] px-6 py-2 rounded-r hover:bg-[#FF4415] transition-colors whitespace-nowrap">
              Join
            </button>
          </div>
        </div>

        {/* Social Links */}
        <div class="flex space-x-4 mt-6">
          <a href="#" class="bg-white p-2 rounded-full">
            <img src="/facebook-icon.svg" alt="Facebook" class="w-6 h-6" />
          </a>
          <a href="#" class="bg-white p-2 rounded-full">
            <img src="/twitter-icon.svg" alt="Twitter" class="w-6 h-6" />
          </a>
          <a href="#" class="bg-white p-2 rounded-full">
            <img src="/youtube-icon.svg" alt="YouTube" class="w-6 h-6" />
          </a>
          <a href="#" class="bg-white p-2 rounded-full">
            <img src="/linkedin-icon.svg" alt="LinkedIn" class="w-6 h-6" />
          </a>
          <a href="#" class="bg-white p-2 rounded-full">
            <img src="/instagram-icon.svg" alt="Instagram" class="w-6 h-6" />
          </a>
        </div>
      </div>

      {/* Center - Navigation Sections */}
      <div class="col-span-4 col-start-7">
        <div class="grid grid-cols-2 gap-12">
          {footerSections.map((section) => (
            <div>
              <h3 class="font-bold mb-4">{section.title}</h3>
              <ul class="space-y-2">
                {section.links.map((link) => (
                  <li>
                    <a href={link.href} class="text-sm hover:text-gray-300 transition-colors">
                      {link.text}
                    </a>
                  </li>
                ))}
              </ul>
            </div>
          ))}
        </div>
      </div>

      {/* Right - Connect Section */}
      <div class="col-span-2 col-start-11">
        <h3 class="font-bold mb-4">CONNECT</h3>
        <ul>
          <li>
            <a href="/contact" class="text-sm hover:text-gray-300 transition-colors">
              Contact Us
            </a>
          </li>
        </ul>
      </div>
    </div>

    {/* Copyright */}
    <div class="mt-16">
      <div class="text-sm">
        <span>&copy; Copyright {currentYear} Amplio Ghana | </span>
        <a href="/privacy" class="hover:text-gray-300 transition-colors">Privacy Policy</a>
      </div>
    </div>
  </div>
</footer>