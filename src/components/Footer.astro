---
interface FooterLink {
  text: string;
  href: string;
}

interface FooterSection {
  title: string;
  links: FooterLink[];
}

const footerSections: FooterSection[] = [
  {
    title: "ABOUT US",
    links: [
      { text: "Our Story", href: "/our-story" },
      { text: "Why Talking Books", href: "/why-talking-books" },
      { text: "Our Technology", href: "/technology" },
      { text: "Basic Package", href: "/basic-service-package" },
      { text: "Amplio Ghana", href: "/amplio-ghana" },
      { text: "Careers", href: "/careers" }
    ]
  },
  {
    title: "LEARN MORE",
    links: [
      { text: "Amplio Blog", href: "/blog" },
      { text: "Videos", href: "/videos" },
      { text: "Case Studies", href: "/case-studies" },
      { text: "Impact Map", href: "/impact" },
      { text: "Ways to Listen", href: "/ways-to-listen" }
    ]
  }
];

const currentYear = new Date().getFullYear();
---

<footer class="bg-[#2D396A] text-white py-16">
  <div class="max-w-[2000px] mx-auto px-6 md:px-12 lg:px-44">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-10 gap-8">
      
      <div class="lg:col-span-5">
        <p class="text-sm leading-relaxed mb-6 lg:mb-12">
          Amplio Ghana is a Ghana-based non-governmental organisation, Reg No. CG059762020. Amplio's innovative technology and Social and Behavior Change (SBC) expertise amplifies program reach and impact in rural communities globally. Maker of the Amplio Talking Book.
        </p>

        <div class="mb-6 lg:mb-8">
          <h3 class="font-bold mb-4">JOIN OUR NEWSLETTER</h3>
          <div class="flex flex-col sm:flex-row items-start">
            <input
              type="email"
              placeholder="e.g., email@example.com"
              class="w-full sm:flex-1 px-4 py-2 bg-white text-gray-800 rounded-l-md sm:rounded-l focus:outline-none mb-3 sm:mb-0"
            />
            <button class="bg-[#FF5C35] px-6 py-2 rounded-r-md sm:rounded-r hover:bg-[#FF4415] transition-colors whitespace-nowrap">
              Join
            </button>
          </div>
        </div>

        <div class="flex justify-center lg:justify-start space-x-4 mt-6">
          <a href="https://www.facebook.com/AmplioNetwork" class="bg-white p-2 rounded-full">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="#2D396A">
