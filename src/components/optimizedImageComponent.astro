---
import { Image } from 'astro:assets';

interface Props {
  src: ImageMetadata;
  alt: string;
  width: number;
  height: number;
  class?: string;
  loading?: "lazy" | "eager";
  priority?: boolean;
}

const { src, alt, width, height, class: className, loading = "lazy", priority = false } = Astro.props;
---

<Image 
  src={src}
  alt={alt}
  width={width}
  height={height}
  class={className}
  loading={loading}
/>