---
import { Image } from 'astro:assets';
import mainBanner from '../assets/homepageAssets/mainBanner.jpg';  // Update this path to match your project structure

// Constants for image dimensions
const DIMENSIONS = {
  width: 1920,
  height: 1080
};

// Pre-compute text content
const content = {
  title: "AMPLIO TALKING BOOK PROGRAM",
  heading: "Share knowledge through audio technology"
};
---

<section class="relative lg:h-screen h-[400px] overflow-hidden">
  <div class="absolute inset-0">
    <Image
      src={mainBanner}
      width={DIMENSIONS.width}
      height={DIMENSIONS.height}
      alt="Amplio Talking Book Program - Share knowledge through audio technology in rural communities"
      class="w-full h-full object-cover"
      loading="eager"
      decoding="sync"
    />
    <div class="absolute inset-0 bg-gradient-to-b from-black/30 to-black/5"></div>
  </div>

  {/* Desktop content */}
  <div class="relative hidden lg:flex h-full items-start pt-[17vh]">
    <div class="w-full max-w-[2000px] px-4 sm:px-6 md:px-8 lg:px-56">
      <div class="max-w-2xl text-white">
        <h1 class="text-xl font-medium mb-4 tracking-wide">
          {content.title}
        </h1>
        <div class="text-5xl font-bold leading-tight whitespace-pre-line">
          {content.heading}
        </div>
      </div>
    </div>
  </div>

  {/* Mobile content */}
  <div class="relative lg:hidden h-full flex flex-col justify-center pt-[15vh] px-4">
    <div class="text-white">
      <h1 class="text-sm font-medium mb-2">
        {content.title}
      </h1>
      <div class="text-3xl font-bold">
        {content.heading}
      </div>
    </div>
  </div>
</section>