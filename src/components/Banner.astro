---
import { Image } from 'astro:assets';
import mainBanner from '../assets/homepageAssets/mainBanner.optimized.jpg';
import OptimizedImage from './optimizedImageComponent.astro';

const BANNER_WIDTH = 1920;  
const BANNER_HEIGHT = 1080; 
---

<div class="relative lg:h-screen h-[400px]">
    <div class="absolute inset-0">
      <OptimizedImage
        src={mainBanner}
        alt="Amplio Talking Book Program - Share knowledge through audio technology in rural communities"
        width={BANNER_WIDTH}
        height={BANNER_HEIGHT}
        class="w-full h-full object-cover"
        loading="eager"
        priority={true}
      />
      <div class="absolute inset-0 bg-black/5"></div>
    </div>

    <!-- Desktop Content -->
    <div class="relative h-full lg:flex lg:items-start lg:pt-[17vh] hidden"> 
      <div class="w-full max-w-[2000px] px-4 sm:px-6 md:px-8 lg:px-56">
        <div class="max-w-2xl text-white">
          <h1 class="text-xl font-medium mb-4 tracking-wide">
            AMPLIO TALKING BOOK PROGRAM
          </h1>
          <div class="text-5xl font-bold leading-tight">
            Share knowledge
            <br />
            through audio
            <br />
            technology
          </div>
        </div>
      </div>
    </div>

    <!-- Mobile Content -->
    <div class="relative h-full flex flex-col justify-center pt-[15vh] lg:hidden px-4">
      <div class="text-white">
        <h1 class="text-sm font-medium mb-2">
          AMPLIO TALKING BOOK PROGRAM
        </h1>
        <div class="text-3xl font-bold">
          Share knowledge through audio technology
        </div>
      </div>
    </div>
</div>