---
import { Image } from 'astro:assets';
import mainBanner from '/public/assets/homepageAssets/mainBanner.jpg';
---

<div class="relative h-screen">
    <div class="absolute inset-0">
      <Image
        src={mainBanner}
        alt="Amplio Talking Book Program"
        class="w-full h-full object-cover object-center"
        loading="eager"
        quality="max"
      />
      <div class="absolute inset-0 bg-white/10"></div>
    </div>
  
    <div class="relative h-full flex items-start pt-[17vh]"> 
      <div class="w-full max-w-[2000px] px-4 sm:px-6 md:px-8 lg:px-56">
        <div class="max-w-2xl text-white">
          <h2 class="text-base sm:text-lg md:text-xl font-medium mb-2 sm:mb-4 tracking-wide">
            AMPLIO TALKING BOOK PROGRAM
          </h2>
          <div class="text-2xl sm:text-3xl md:text-4xl lg:text-5xl font-bold leading-tight space-y-1">
            <div>Share knowledge</div>
            <div>through audio</div>
            <div>technology</div>
          </div>
        </div>
      </div>
    </div>
</div>