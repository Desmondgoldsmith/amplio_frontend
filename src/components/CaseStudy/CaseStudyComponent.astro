
---
interface CaseStudy {
    title: string;
    description: string;
    imageUrl: string;
    readMoreLink: string;
  }
const caseStudies: CaseStudy[] = [
  {
    title: "CARE'S WOMEN FOR CHANGE PROGRAM: A CASE STUDY",
    description: "Women in Ghana's cocoa communities have made strides in overcoming gender inequality and financial illiteracy. Through their active participation in CARE'S expanded village savings and loans program and targeted training initiatives supported by Amplio, they have enhanced their financial knowledge and developed robust income-generating capabilities.",
    imageUrl: "/path/to/care-women-image.jpg",
    readMoreLink: "Read CARE's Women for Change Talking Book Case Study"
  },
  {
    title: "TOSTAN CASE STUDY: INCREASED ADOPTION OF VROOM TIPS VIA TALKING BOOKS",
    description: "Tostan faced challenges in delivering Early Childhood Development knowledge to rural communities with low literacy levels and limited access to technology. By collaborating with Vroom and utilizing Amplio Talking Books, Tostan successfully reached thousands of engaged caregivers with Vroom's content.",
    imageUrl: "/path/to/tostan-image.jpg",
    readMoreLink: "Read TOSTAN's Talking Book Case Study"
  },
];
---

<section class="bg-white mt-22 py-16">
  <!-- Header -->
  <div class="container mx-auto px-4">
    <div class="text-center mb-16">
      <h2 class="text-4xl font-bold text-gray-900 mb-4">Case Studies</h2>
      <p class="text-xl text-gray-600">Read about Talking Book technology and program impact.</p>
    </div>

    <!-- Case Studies Grid -->
    <div class="grid gap-8 md:gap-12">
      {caseStudies.map((study) => (
        <div class="bg-white rounded-lg overflow-hidden border border-gray-100 hover:shadow-lg transition-shadow duration-300">
          <div class="flex flex-col md:flex-row">
            <!-- Image Container -->
            <div class="md:w-1/3 relative">
              <img
                src={study.imageUrl}
                alt={study.title}
                class="w-full h-full object-cover aspect-video md:aspect-square"
              />
            </div>

            <!-- Content Container -->
            <div class="md:w-2/3 p-6 md:p-8">
              <h3 class="text-2xl font-bold text-gray-900 mb-4">
                {study.title}
              </h3>
              <p class="text-gray-600 mb-6 leading-relaxed">
                {study.description}
              </p>
              <a
                href="#"
                class="text-blue-500 hover:text-blue-600 font-medium inline-flex items-center transition-colors duration-200"
              >
                {study.readMoreLink}
                <svg
                  class="w-4 h-4 ml-2"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    strokeLinecap="round"
                    strokeLinejoin="round"
                    strokeWidth="2"
                    d="M9 5l7 7-7 7"
                  />
                </svg>
              </a>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
<style>
@layer components {
  .case-study-link {
    @apply text-blue-500 hover:text-blue-600 font-medium inline-flex items-center transition-colors duration-200;
  }
}
</style>